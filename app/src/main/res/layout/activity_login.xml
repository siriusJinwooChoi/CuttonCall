<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_road"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/road_real" />

    <ImageView
        android:id="@+id/iv_orange"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:layout_above="@+id/iv_road"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-5dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/orange_pock" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_above="@+id/iv_road"
        android:layout_marginBottom="-5dp"
        android:layout_marginEnd="13dp"
        android:layout_toStartOf="@+id/iv_orange"
        app:srcCompat="@drawable/green_pock" />

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56.7dp"
        android:text="소중한 사람과"
        android:textColor="@color/colorDarkGrey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6.7dp"
        android:text="함께하는"
        android:textColor="@color/colorDarkGrey"
        android:textSize="32sp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_below="@+id/tv_title2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-7dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btn_login_student"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="286.7dp"
        android:layout_height="43.3dp"
        android:layout_above="@+id/btn_login_normal"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_button_selector"
        android:text="대학생 가입하기"
        android:textColor="@color/colorWhite"
        android:textSize="17dp" />

    <Button
        android:id="@+id/btn_login_normal"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="286.7dp"
        android:layout_height="43.3dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="127.3dp"
        android:background="@drawable/login_button_selector"
        android:text="일반회원 가입하기"
        android:textColor="@color/colorWhite"
        android:textSize="17dp" />

    <Button
        android:id="@+id/voice_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voice Button"/>

</RelativeLayout>